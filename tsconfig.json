{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Required until this issue is resolved
    // https://github.com/microsoft/TypeScript/issues/52460
    "paths": {
      "#*": ["./src/*"]
    },

    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },

  "include": [
    "src/**/*"
  ],
}
